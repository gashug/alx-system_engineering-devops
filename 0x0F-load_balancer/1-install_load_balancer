#!/usr/bin/env bash
# install and configure HAproxy on lb-01 server
sudo apt-get update
sudo apt-get install haproxy=1.5
cat <<EOL | sudo tee /etc/haproxy/haproxy.cfg
global
    daemon
    maxconn 256

defaults
    mode http
    timeout connect 5000ms
    timeout client 50000ms
    timeout server 50000ms

frontend http-in
    bind *:80
    default_backend servers

backend servers
    balance roundrobin
    server 130152-web-01 54.157.184.253:80 check
    server 130152-web-02  52.87.255.172:80 check
EOL

service haproxy restart
service haproxy enable
sudo hostnamectl set-hostname 130152-lb-01

sudo reboot
