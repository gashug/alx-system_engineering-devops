#!/usr/bin/env bash
# install and configure HAproxy on lb-01 server
sudo apt-get update
sudo apt-get install haproxy

sudo service haproxy start
sudo service haproxy enable

echo "ENABLED=1" >> /etc/default/haproxy

echo -e "\nfrontend localservers\n\tbind *:80\n\tmode http\n\tdefault_backend servers\n\nbackend servers\n\tbalance roundrobin\n\tserver 130152-web-01 52.3.248.10:80 check\n\tserver 130152-web-02 52.205.224.51:80 check\n" | sudo tee -a /etc/haproxy/haproxy.cfg > /dev/null

sudo service haproxy restart
